<div class="row justify-content-center">
    <div class="col col-8">
        <h2 class="text-center">Edit Car</h2>
        <form action="/cars/update/{{ car._id }}?_method=PUT" method="POST">
            <div class="form-group">
                <label for="carName">CarName:</label>
                <input type="text" class="form-control" name="carName" placeholder="CarName" id="carName" value="{{ car.name }}">
            </div>
            <div class="form-group">
                <label for="carImage">CarImage:</label>
                <input type="text" class="form-control" name="carImage" placeholder="CarImage" id="carImage" value="{{ car.image }}">
            </div>
            <div class="form-group">
                <label for="carManufacture">CarManufacture:</label>
                <input type="text" class="form-control" name="carManufacture" placeholder="CarManufacture" id="carManufacture" value="{{ car.manufacture }}">
            </div>
            <div class="form-group">
                <label for="carEngine">CarEngine:</label>
                <input type="text" class="form-control" name="carEngine" placeholder="CarEngine" id="carEngine" value="{{ car.engine }}">
            </div>
            <div class="form-group">
                <label for="carPower">CarPower:</label>
                <input type="text" class="form-control" name="carPower" placeholder="CarPower" id="carPower" value="{{ car.power }}">
            </div>
            <div class="form-group">
                <label for="carPrice">CarPrice:</label>
                <input type="text" class="form-control" name="carPrice" placeholder="CarPrice" id="carPrice" value="{{ car.price }}">
            </div>
            <div class="form-group">
                <label for="carTopSpeed">CarTopSpeed:</label>
                <input type="text" class="form-control" name="carTopSpeed" placeholder="CarTopSpeed" id="carTopSpeed" value="{{ car.topSpeed }}">
            </div>
            <div class="form-group">
                <p class="text-danger">{{message}}</p>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>